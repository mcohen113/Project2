<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Holiday Search</title>
  <link rel="stylesheet" href="/style.css">
  <link href="https://fonts.googleapis.com/css?family=Orbitron" rel="stylesheet">
</head>
<body>
  <h1><%= user.username %>, search for your favorite holidays!</h1>

  <form action="/holidays/search" method="post">
      <p>Enter a year</p>
      <input type="text" name="year">
      <p>Enter a holiday</p>
      <input type="text" name="holiday" placeholder="search">
      <button type="submit" >search</button>
  </form>
  <div class="container">
    <div id="favorites-container">
      <h2><%= user.username %>'s Favorite Holidays</h2>
      <% favorites.forEach((fave) => { %>
        <div class="fave">
          <p><%= fave.title %></p>
          <p><%= fave.date %></p>
          <p><%= fave.hebrew %></p>
        <a href="<%= fave.link %>" title="">Learn more!!!</a>
          <form action="/holidays/favorites/<%= fave._id %>?_method=DELETE" method="post">
            <input type="submit" id="submit" value="Delete">
    </form>
      </div>
    <% }) %>
    </div>
  </div>
  <div id="search-results-container">
    <h2>Search Results</h2>
    <% holidays.forEach((holiday) => { %>
      <div class="search-results">
        <p><%= holiday.title %></p>
        <p><%= holiday.date %></p>
        <p><%= holiday.hebrew %></p>
        <p><%= holiday.memo %></p>
        <a href="<%= holiday.link %>" title="">Learn more!!!</a>
                <form action="/holidays/favorites" method="POST">
          <input type="hidden" name="favorite[date]" value="<%= holiday.date %>">
          <input type="hidden" name="favorite[title]" value="<%= holiday.title%>">
          <input type="hidden" name="favorite[hebrew]" value="<%= holiday.hebrew%>">
          <input type="hidden" name="favorite[link]" value="<%= holiday.link%>">
          <input type="submit" id="submit" value="SAVE">
        </form>
      </div>
    <% }) %>
  </div>
  <a href="/users/profile">Back to Profile</a>
</body>
</html>
