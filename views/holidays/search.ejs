<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Holidays</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>


  <div id="favorites-container">
    <h2><%= user.username %>'s Favorites:</h2>
    <% favorites.forEach((fave) => { %>
      <div class="fave">
        <p><%= fave.date %></p>
        <p><%= fave.title %></p>
        <p><%= fave.hebrew %></p>
        <p><%= fave.link %></p>
        <form action="/music/favorites/<%= fave._id %>?_method=DELETE" method="post">
          <input type="submit" value="Delete">
        </form>
      </div>
    <% }) %>
  </div>
  <div id="search-results-container">
    <h2>Search Results:</h2>
    <% holidays.forEach((holiday) => { %>
      <div class="search-results">
       <p><%= holiday.date %></p>
        <p><%= holiday.title %></p>
        <p><%= holiday.hebrew %></p>
        <p><%= holiday.memo %></p>
        <p><%= holiday.link %></p>
        <form action="/holidays/favorites" method="POST">
          <input type="hidden" name="favorite[date]" value="<%= holiday.date %>">
          <input type="hidden" name="favorite[title]" value="<%= holiday.title%>">
          <input type="hidden" name="favorite[hebrew]" value="<%= holiday.hebrew%>">
          <input type="hidden" name="favorite[link]" value="<%= holiday.link%>">
          <input type="submit" value="SAVE">
        </form>
      </div>
    <% }) %>
  </div>
  <a href="/">Home</a>
</body>
</html>
